<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ch.zbw.sysVentorySaas.App2.model.Software" table="software">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einer Software.</meta>
		<id name="idSoftware" type="int" column="idsoftware">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="version" column="version" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App2.model.OperatingSystem" table="operatingsystem">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Betriebssystem</meta>
		<id name="idOperatingSystem" type="int" column="idoperatingsystem">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="architecture" column="architecture" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App2.model.Processor" table="processor">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Prozessor</meta>
		<id name="idProcessor" type="int" column="idprocessor">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="cores" column="cores" type="int"/>
		<property name="frequency" column="frequency" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App2.model.Printer" table="printer">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Drucker</meta>
		<id name="idPrinter" type="int" column="idprinter">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="description" column="description" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App2.model.NetworkInterface" table="networkinterface">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Netzwerk-Interface</meta>
		<id name="idNetworkInterface" type="int" column="idnetworkinterface">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App2.model.Device" table="device">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Gerät (Device)</meta>
		<id name="idDevice" type="int" column="idDevice">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="macAddress" column="macAddress" type="string"/>
		<property name="ipAddress" column="ipAddress" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App2.model.User" table="user">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem User</meta>
		<id name="idUser" type="int" column="idUser">
			<generator class="identity"/>
		</id>
		<property name="username" column="username" type="string"/>
		<property name="password" column="password" type="string"/>
		<property name="email" column="email" type="string"/>
	</class>
</hibernate-mapping>