<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ch.zbw.sysVentorySaas.App.model.Software" table="software">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einer Software.</meta>
		<id name="idSoftware" type="int" column="idsoftware">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="version" column="version" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App.model.OperatingSystem" table="operatingsystem">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Betriebssystem</meta>
		<id name="idOperatingSystem" type="int" column="idoperatingsystem">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="architecture" column="architecture" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App.model.Processor" table="processor">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Prozessor</meta>
		<id name="idProcessor" type="int" column="idprocessor">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="cores" column="cores" type="int"/>
		<property name="frequency" column="frequency" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App.model.Printer" table="printer">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Drucker</meta>
		<id name="idPrinter" type="int" column="idprinter">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="description" column="description" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App.model.NetworkInterface" table="networkinterface">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Netzwerk-Interface</meta>
		<id name="idNetworkInterface" type="int" column="idnetworkinterface">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App.model.Device" table="device">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Gerät (Device)</meta>
		<id name="idDevice" type="int" column="idDevice">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="manufacturer" column="manufacturer" type="string"/>
		<property name="macAddress" column="macAddress" type="string"/>
		<property name="ipAddress" column="ipAddress" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App.model.Group" table="gruppe">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einer Gruppe</meta>
		<id name="idGroup" type="int" column="idGroup">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App.model.Company" table="company">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einer Firma</meta>
		<id name="idCompany" type="int" column="idCompany">
			<generator class="identity"/>
		</id>
		<one-to-one name="scanSetting" class="ch.zbw.sysVentorySaas.App.model.ScanSetting" constrained="true" cascade="all"></one-to-one>
		<property name="name" column="name" type="string"/>
		<property name="street" column="street" type="string"/>
		<property name="houseNumber" column="houseNumber" type="string"/>
		<property name="houseNumberAdd" column="houseNumberAdd" type="string"/>
		<property name="zipCode" column="zipCode" type="string"/>
		<property name="city" column="city" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App.model.Service" table="service">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Service</meta>
		<id name="idService" type="int" column="idService">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="enabled" column="enabled" type="boolean"/>
	</class>
	
	<class name="ch.zbw.sysVentorySaas.App.model.ScanStatus" table="scanstatus">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Scanstatus</meta>
		<id name="idScanStatus" type="int" column="idScanScanstatus">
			<generator class="identity"/>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="description" column="enabled" type="string"/>
	</class>

	<class name="ch.zbw.sysVentorySaas.App.model.ScanJob" table="scanjob">
		<meta attribute="class-description">Diese Klasse enthält sämtliche Details zu einem Scan-Job</meta>
		<id name="idScanJob" type="int" column="idScanJob">
			<generator class="identity"/>
		</id>
		<property name="startTime" column="startTime" type="string"/>
		<property name="endTime" column="endTime" type="string"/>
<!-- 		<property name="status" column="status" type="Enum"/> -->
	</class>
</hibernate-mapping>